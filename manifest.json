 {
 	"manifest_version": 2,
    "name": "PokeTab",
    "version": "0.1",

    "description": "Collect and Train Pokemon while you browse",
    "icons":{
	        "16": "images/icon_16.png",
	        "32": "images/icon_32.png",
	        "64": "images/icon_64.png",
	        "128": "images/icon_128.png"
    },

    "browser_action": {
    	"default_popup": "./main.html"
    },
    "permissions": [
        "storage"
    ],

    "background": {
    	"scripts": [
            "./js/pokemon.js",
            "./js/pokemon_data.js",
            "./js/background.js"
        ],
    	"persistent": true
    }
 }